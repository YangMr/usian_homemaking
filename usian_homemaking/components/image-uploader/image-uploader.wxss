.container{
    display: flex;
    flex-wrap: wrap;
}
.uploader-item{
    width: 160rpx;
    height: 160rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20rpx;
    position: relative;
}
.display-image{
    width: 100%;
    height: 100%;
}
.icon-uploading{
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
    z-index : 2;
    background-color: #333;
    opacity: 0.7;
}
.icon-delete{
    padding:8rpx 10rpx;
    background-color: #333;
    opacity: 0.7;
    position: absolute;
    top : -20rpx;
    right : -20rpx;
    border-radius: 50%;
}
.error{
    color : #000;
    font-size: 20rpx;
}
.choose-image {
    width: 160rpx;
    height: 160rpx;
    background-color: #efefef;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20rpx;
}