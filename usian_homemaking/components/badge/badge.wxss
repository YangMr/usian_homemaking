.container{
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.dot{
    width: 34rpx;
    height: 34rpx;
    border-radius: 50%;
    background-color: red;
    overflow: hidden;
    font-size : 18rpx;
    color : #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top : -10rpx;
    z-index : 2;
}
.top-right{
    right : -24rpx;
}
.top-left{
    left : -24rpx;
}