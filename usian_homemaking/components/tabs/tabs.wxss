.container{
    min-height : 100%;
    display : flex;
    flex-direction: column;
}
.tabs {
    display: flex;
    padding: 30rpx 0;
    height: 126rpx;
    box-sizing: border-box;
    background-color: #fff;
    align-items: center;
    position : sticky;
    top:0;
    left :0;
    width : 100%;
    z-index :99;
}

.tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center
}

.tab-label {
    color: #888888;
    white-space: nowrap;
}

.active-tab {
    color: #333333;
    font-weight: bold;
}

.divider {
    height: 6rpx;
    width: 50rpx;
    background-color: #f3d066;
    margin-top: 10rpx;
}

.tab-panel{
    flex : 1;
    margin-top:30rpx;
}