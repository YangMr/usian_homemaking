<view class="container">
    <view class="avatar">
        <image class="avatar-image" src="{{src}}" style="width:{{size}}rpx; height:{{size}}rpx; border-radius:{{shape === 'circle' ? '50%' : radius + 'rpx'}}"></image>
    </view>
    <view class="nickname" style="font-size:{{fontSize}}rpx">
        {{text}}
    </view>
</view>