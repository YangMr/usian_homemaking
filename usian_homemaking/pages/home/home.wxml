<view class="container">
    <view class="tabs">
        <view class="tab-item" data-index="{{index}}" wx:for="{{tabs}}" wx:key="index" bind:tap="handleTabChange">
            <view class="tab-label {{currentTabIndex == index ? 'active-tab' : ''}}">
                {{item}}
            </view>
            <view class="divider" wx:if="{{currentTabIndex == index}}"></view>
        </view>
    </view>
    <view class="category">
        <swiper style="height : 150rpx;" display-multiple-items="{{2}}" next-margin="60rpx">
            <swiper-item wx:for="{{categoryList}}" wx:key="index" data-id="{{item.id}}" bind:tap="handleCategoryChange">
                <view class="category-swiper-item">
                    <text class="category-name">{{item.name}}</text>
                </view>
            </swiper-item>
        </swiper>
    </view>
    <view class="tab-panel"></view>
</view>




