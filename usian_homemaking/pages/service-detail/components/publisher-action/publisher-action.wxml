<view class="action-bar-item">
    <button data-action="{{serviceActionEnum.CANCEL}}" bind:tap="handleUpdateService" wx:if="{{service.status !== serviceStatusEnum.CANCELED && service.status !== serviceStatusEnum.OFF_SHELVES}}">取消服务</button>
    <button data-action="{{serviceActionEnum.CANCEL}}" bind:tap="handleEdit" wx:if="{{service.status !== serviceStatusEnum.CANCELED && service.status !== serviceStatusEnum.OFF_SHELVES}}">修改服务</button>
    <button data-action="{{serviceActionEnum.PAUSE}}" bind:tap="handleUpdateService" wx:if="{{service.status === serviceStatusEnum.PUBLISHED}}">暂停服务</button>
    <button data-action="{{serviceActionEnum.PUBLISH}}" bind:tap="handleUpdateService" wx:if="{{service.status === serviceStatusEnum.UNPUBLISHED}}">发布</button>
</view>
